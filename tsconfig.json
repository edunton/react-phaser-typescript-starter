{
    "compilerOptions": {
      "jsx": "react",
      "baseUrl": ".",
      "module": "es6",
      "outDir": "./build",
      "lib": ["DOM", "ESNEXT"],
      "target": "ES6",

      "moduleResolution": "node",
      "preserveConstEnums": true,
      "noImplicitThis": true,
      "removeComments": false,
      //"inlineSourceMap": true,
      "sourceMap": true,
      "declaration": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}